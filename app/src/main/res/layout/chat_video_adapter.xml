<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/constLayoutTwo"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:background="@drawable/chat_video_adapter_border"
    android:foreground="?actionBarItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgThumblain"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_66sdp"
        android:alpha="1"
        android:background="@drawable/premium_img"
        android:scaleType="centerCrop"
        app:riv_corner_radius_bottom_left="@dimen/_33sdp"
        app:riv_corner_radius_top_left="@dimen/_33sdp"
        app:riv_mutate_background="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtType"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:maxLines="3"
        android:visibility="invisible"
        android:text="Best songs of this year"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imgThumblain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0sp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:maxLines="2"
        android:text="Best songs of this year"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/imgThumblain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtType">

    </TextView>

    <TextView
        android:id="@+id/txtDiscription"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:maxLines="2"
        android:text="Best songs of this year Best songs of this year Best songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this yearBest songs of this year Best songs of this year "
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/imgThumblain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUserList"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/imgThumblain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDiscription"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>