<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserAvtar"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="center"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="@id/ivUserAvtar"
        app:layout_constraintRight_toRightOf="@id/ivUserAvtar"
        app:layout_constraintTop_toBottomOf="@+id/ivUserAvtar" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_7sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/ivUserAvtar"
        app:layout_constraintRight_toRightOf="@+id/ivUserAvtar"
        app:layout_constraintTop_toTopOf="@+id/ivUserAvtar" />

</androidx.constraintlayout.widget.ConstraintLayout>

